{
  "plugins": ["react", "prettier"],
  "extends": ["airbnb-base", "plugin:react/recommended", "prettier"],
  "parser": "babel-eslint",
  "rules": {
    "no-set-state": "off",
    "arrow-parens": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".json", ".native.js"]
      }
    },
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "node": true
  }
}
